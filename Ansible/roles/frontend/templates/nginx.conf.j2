upstream backend_servers {
    least_conn;
    server 192.168.1.201:8080 max_fails=3 fail_timeout=30s;
    server 192.168.1.202:8080 max_fails=3 fail_timeout=30s;
    server 192.168.1.203:8080 max_fails=3 fail_timeout=30s;
}

server {
    listen 80;
    server_name _;

    root /var/www/html;
    index index.html;

    location = /metrics {
        stub_status on;
        access_log off;
    }

    location /nginx-health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    location / {
        try_files $uri /index.html;
    }

    location /api/ {
        proxy_pass http://backend_servers/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Connection "";
        
        # Додаємо заголовок з інформацією про backend
        add_header X-Backend-Server $upstream_addr always;
        
        # Load balancer health check
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503;
        proxy_connect_timeout 2s;
    }
}